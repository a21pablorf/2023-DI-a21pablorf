<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.olamundo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" textFill="blue">
            <font><Font name="ArialBold" size="15"/></font>
    </Label>
    <Button text="Suma" onAction="#onHelloButtonClick">
        <tooltip><Tooltip text="Suma 1 numero al contador"/></tooltip>
    </Button>
    <Button text="_Salir" onAction="#onButtonClick"/>
</VBox>
