<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.javafxdialogos.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <FlowPane hgap="10" vgap="10">
        <Button text="Choice Dialog" onAction="#showChoiceDialog"/>
        <Button text="Error alert" onAction="#showErrorAlert"/>
        <Button text="Information alert" onAction="#showInformationAlert"/>
        <Button text="Warning alert" onAction="#showWarningAlert"/>
        <Button text="TextInputDialog" onAction="#showTextInputDialog"/>
    </FlowPane>
</VBox>
